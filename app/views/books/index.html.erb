<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="application.css">
	<title>Books</title>
</head>

<body>
  	<h1>Books</h1>

  	<table>
  		<tr>
  			<th>Title</th>
  			<th>Body</th>
  			<th colspan="3"></th>
  		</tr>

  			<% @books.each do |book| %>
		  		<tr>

		  		    <td> <%= book.title %> </td>
		  			<td> <%= book.body %> </td>
		  			<td colspan="3">
		  				<%= link_to "Show", book_path(book.id),class: "show_#{book.id}" %>
		  				<%= link_to "Edit", edit_book_path(book.id),class: "edit_#{book.id}" %>
		  				<%= link_to "Destroy", book_path(book),method: :delete,class: "destroy_#{book.id}" %>
		  			</td>
		  		</tr>

  			<% end %>
  	</table>

  	<h2>New book</h2>
  	<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title,class:"book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body,class:"book_body" %>

    <div class="actions">
    <%= f.submit 'Create Book'%>
    </div>
    <% end %>
  </body>
</html>

